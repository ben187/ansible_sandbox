[Unit]
Description=The PHP 7.1 FastCGI Process Manager, second worker
Documentation=man:php-fpm7.1(8)
After=network.target

[Service] 
Type=notify
PIDFile=/run/php/php7.1-fpm-3.pid
ExecStart=/usr/sbin/php-fpm7.1 --nodaemonize --fpm-config /etc/php/7.1/fpm/php-fpm-3.conf
ExecReload=/bin/kill -USR2 $MAINPID
LimitNOFILE=500000
LimitNPROC=500000

[Install]
WantedBy=multi-user.target
